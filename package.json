{
  "name": "demo-author-style",
  "version": "1.0.0",
  "description": "Author style (BERT) demo service",
  "main": "src/server.js",
  "scripts": {
    "test": "src/node_modules/.bin/mocha src/test src/test/serving",
    "start": "node src/server.js config/app-config.json",
    "performance-test": "src/node_modules/.bin/mocha src/test/performance",
    "docker-build": "docker build -t pop-or-rock-demo src",
    "docker-up": "docker run -p 3001:3000 -d --label \"service=demo-pop-or-rock\" --mount type=bind,source=\"$(pwd)\"/config,target=/app/config pop-or-rock-demo:latest",
    "docker-container": "docker ps -f \"label=service=demo-pop-or-rock\" | tail -n 1 | sed 's/\\([0-9A-Za-z]*\\) .*$/\\1/'"
  },
  "author": "Daniel Skantze",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "node-html-parser": "^1.1.16",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "mocha": "^6.2.2"
  }
}
